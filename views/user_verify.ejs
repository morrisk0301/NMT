<!-- page container area start -->
<div class="page-container">
    <!-- sidebar menu area start -->
    <div class="sidebar-menu">
        <div class="sidebar-header">
            <div class="logo">
                <a href="/"><img src="assets/images/icon/logo.png" alt="logo"></a>
            </div>
        </div>
        <div class="main-menu">
            <div class="menu-inner">
                <nav>
                    <ul class="metismenu" id="menu">
                        <li class="active">
                            <a href="/" aria-expanded="true"><i class="fa fa-home"></i><span>홈 화면</span></a>
                        </li>
                        <li>
                            <a href="#" aria-expanded="true"><i class="fa fa-user"></i><span>마이 페이지</span></a>
                            <ul class="collapse">
                                <li><a href="/my_buy">나의 구매 조회 </a></li>
                                <li><a href="/my_sell">나의 판매 조회 </a></li>
                                <li><a href="/my_verify">나의 검증 조회 </a></li>
                            </ul>
                        </li>
                        <%if(user_type===0){%>
                            <li>
                                <a href="#" aria-expanded="true"><i class="fa fa-eye"></i><span>관리자 페이지</span></a>
                                <ul class="collapse">
                                    <li><a href="/auth_verifier">검증자 승인 </a></li>
                                </ul>
                            </li>
                        <%}%>
                        <li>
                            <a href="javascript:void(0)" aria-expanded="true"><i class="fa fa-credit-card"></i><span>데이터 구매 </span></a>
                            <ul class="collapse">
                                <li><a href="/buy">구매 등록 </a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="javascript:void(0)" aria-expanded="true"><i class="fa fa-database"></i><span>데이터 판매 </span></a>
                            <ul class="collapse">
                                <li><a href="/view_trade">거래 조회 </a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="javascript:void(0)" aria-expanded="true"><i class="fa fa-check"></i><span>데이터 검증 </span></a>
                            <ul class="collapse">
                                <li><a href="/verify_warning">검증 하기 </a></li>
                            </ul>
                            <ul class="collapse">
                                <li><a href="/verifier">검증자 신청 </a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <!-- sidebar menu area end -->
    <!-- main content area start -->
    <div class="main-content">
        <!-- header area start -->
        <div class="header-area">
            <div class="row align-items-center">
                <!-- nav and search button -->
                <div class="col-md-6 col-sm-8 clearfix">
                    <div class="nav-btn pull-left">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
                <!-- profile info & task notification -->
            </div>
        </div>
        <!-- header area end -->
        <!-- page title area start -->
        <div class="page-title-area">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <div class="breadcrumbs-area clearfix">
                        <h4 class="page-title pull-left">데이터 검증 </h4>
                    </div>
                </div>
                <div class="col-sm-6 clearfix">
                    <div class="user-profile pull-right">
                        <img class="avatar user-thumb" src="assets/images/author/avatar.png" alt="avatar">
                        <h4 class="user-name dropdown-toggle" data-toggle="dropdown"><%=user_email%> <i class="fa fa-angle-down"></i></h4>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">회원정보 수정</a>
                            <a class="dropdown-item" id="btn_logout" href="#">로그아웃 </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- page title area end -->
        <div class="main-content-inner">
            <!-- sales report area start -->
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h4>검증 하기 </h4><br><br>
                        <h4><small><%=verification_command%></small></h4><br>
                        <div class="card-area">
                            <div class="row">
                                <%
                                const all = data.length <= 9;
                                const index = all ? data.length : 9
                                for(let i=0;i<index;i++){%>
                                <div class="col-lg-4 col-md-6 col-md-5 nopad text-center">
                                    <label class="image-checkbox">
                                        <img class="img-responsive" src="<%=data[i].data%>" />
                                        <input type="checkbox" class="verifycheckbox" name="image[]" value="" id="<%=data[i].index%>"/>
                                        <i class="fa fa-check" style="display: none;"></i>
                                    </label>
                                </div>
                                <%}%>
                            </div>
                        </div>
                        <br>
                        <%if(!all){%>
                        <div class="text-right">
                            <a href="#" class="btn btn-primary" id="btn_submit_verification">다음 검증</a>
                        </div>
                        <%}else{%>
                        <h4><small>검증 의견 등록</small></h4><br>
                        <div class="card-area">
                            <textarea class="form-control" rows="10" placeholder="검증에 대한 종합 의견을 100자 이상으로 작성해 주세요" id="verification_detail"></textarea>
                        </div><br>
                        <div class="text-right">
                                <a href="#" class="btn btn-primary" id="btn_submit_verification_final">검증 완료</a>
                        </div>
                        <%}%>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- main content area end -->
    <!-- footer area start-->
    <footer>
        <div class="footer-area">
            <p>© Copyright 2019. All right reserved.</p>
        </div>
    </footer>
    <!-- footer area end-->
</div>
